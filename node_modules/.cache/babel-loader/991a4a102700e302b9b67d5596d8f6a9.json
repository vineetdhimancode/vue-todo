{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nexport default {\n  props: ['id'],\n  name: 'TaskForm',\n  data() {\n    return {\n      title: '',\n      completed: false,\n      desc: '',\n      errorDesc: null,\n      errorTitle: null\n    };\n  },\n  methods: {\n    handleSubmit() {\n      let tasks = this.getTask();\n      if (this.id) {\n        let objIndex = tasks.findIndex(task => task.id == id);\n        tasks[objIndex].title = this.title;\n        tasks[objIndex].desc = this.desc;\n        tasks[objIndex].completed = this.completed;\n        tasksObj.saveTask(tasks);\n        this.tasks = tasksObj.getTasks();\n      }\n      let task = {\n        id: (tasks.length ? tasks[tasks.length - 1].id : 0) + 1,\n        title: this.title,\n        desc: this.desc,\n        completed: this.completed\n      };\n      this.title = '';\n      this.desc = '';\n      this.completed = '';\n      tasks.push(task);\n      this.saveTask(tasks);\n    },\n    getTask() {\n      let tasks = localStorage.getItem('tasks');\n      if (!tasks) {\n        tasks = [];\n      } else {\n        tasks = JSON.parse(tasks);\n      }\n      return tasks;\n    },\n    saveTask(tasks) {\n      localStorage.setItem('tasks', JSON.stringify(tasks));\n    }\n  },\n  mounted() {\n    if (!this.id) {\n      return;\n    }\n    let tasks = this.getTask();\n    let currentTask = tasks.filter(task => task.id == this.id);\n    this.title = currentTask[0].title;\n    this.desc = currentTask[0].desc;\n    this.completed = currentTask[0].completed;\n  }\n};","map":{"version":3,"mappings":";AAqBA,eAAe;EACXA,KAAK,EAAE,CAAC,IAAI,CAAC;EACbC,IAAI,EAAE,UAAU;EAChBC,IAAI,GAAG;IACH,OAAO;MACHC,KAAK,EAAE,EAAE;MACTC,SAAS,EAAE,KAAK;MAChBC,IAAI,EAAE,EAAE;MACRC,SAAS,EAAE,IAAI;MACfC,UAAU,EAAE;IAChB;EACJ,CAAC;EACDC,OAAO,EAAE;IACLC,YAAY,GAAG;MACX,IAAIC,KAAI,GAAI,IAAI,CAACC,OAAO,EAAC;MACzB,IAAI,IAAI,CAACC,EAAE,EAAE;QACT,IAAIC,QAAO,GAAIH,KAAK,CAACI,SAAS,CAAEC,IAAG,IAAKA,IAAI,CAACH,EAAC,IAAKA,EAAE,CAAE;QAC